
<div class="row">
<% @artists.each do |artist| %>
<div class="col-md-6 .col-xs-6">
<figure class="fir-image-figure">
	<%=link_to artist_path(artist.name), class: "fir-imageover" do%>
	<%=image_tag artist.avatar(:thumb),class: "fir-author-image fir-clickcircle" %>
	<%end%>
	<figcaption>
  <div class="fig-author-figure-title"><h3><%=link_to artist.name , artist_path(artist.name)%></h3></div>
  <div class="fig-author-figure-title">tel: <%= artist.phone%></div>
  <div class="fig-author-figure-title">email: <%= artist.email%></div>
 </figcaption>
</figure>
</div>
<%end%>
