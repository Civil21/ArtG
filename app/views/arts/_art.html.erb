<div class="col-md-4 .col-xs-12">
<div class="card">
	<%=image_tag art.picture.url(:medium),width:250, height:250  %>
  	<div class="container">
		<h3><%=link_to art.name, artist_art_path(art.artist.name,art.artist.id)%></h3> 
		<% art.categories.each do |category|%>
			<%=link_to category.name, category_path(category.name), class: 'badge badge-secondary' %> 
		<%end%>
  	</div>
</div>
</div>